# Application Settings
APP_NAME=PingLayer
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/pinglayer
DB_ECHO=False

# Security & JWT
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Redis (for background jobs)
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# WhatsApp API (for later phases)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_TOKEN=your-whatsapp-token-here

# Smart Links
SMART_LINK_BASE_URL=http://localhost:8000/s

# GeoIP Database Path (optional)
GEOIP_DB_PATH=./data/GeoLite2-City.mmdb

# Logging
LOG_LEVEL=INFO
